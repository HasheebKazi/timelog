<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> <%= pageTitle %> </title>

    <!-- <link type="text/css" rel="stylesheet" href="/css/reset.css"> -->
    <link type="text/css" rel="stylesheet" href="/css/tl_app.css">

    <script src="/scripts/logger-scripts.js"></script>

</head>

<body>

    <main class="main-wrapper">
        <h1 class="landing-wrapper__title">
            Time Logger for <%= user.name %>.
        </h1>

        <h2>Date: <%= currentDate %></h2>

        <!-- <div class="body_wrapper"> -->

            <table id="daily-log" class="log-display">
                <thead>
                    <tr>
                        <th style="width: 150px">
    
                        </th>
                        <th style="width: 250px">
                            Activity
                        </th>
                    </tr>
                </thead>
                <tbody id="daily-log-body">
                    <% for (let i = 0; i < data.length; i++) { %>
                        <!-- <% console.log("dsfsdf", data[i].time) %> -->
                        <tr>
                            <td><%= data[i].time %></td>
                            <td><%= data[i].activity %><button class="daily-log__remove-activity">X</button></td>

                        </tr>
                    <% } %>
                
                </tbody>
            </table>

            <!-- <hr> -->

            <div class="input-box">
                
                <div class="input-box__form-control">
                    <!-- <lable for="logger-time">Time</lable> -->
                    <input class="input-box__text-input" type="text" name="logger-time" id="logger-time" placeholder="time">

                </div>

                <div class="input-box__form-control">
                    <!-- <lable for="logger-activity">Activity</lable> -->
                    <input class="input-box__text-input" type="text" name="logger-activity" id="logger-activity" placeholder="activity">
                </div>

                <button class="input-box__btn input-box__btn--add" id="add-entry">Add</button><button class="input-box__btn input-box__btn--save" id="save-log">Save</button>
            </div>

        <!-- </div> -->



    </main>
</body>

</html>